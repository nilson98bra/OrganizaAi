datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
  id             String   @id @default(uuid()) @unique
  name           String
  email          String       @unique
  password       String
  collaborators  Collaborator[]  // Many-to-many relationship
}

model Project {
  id             String   @id @default(uuid()) @unique
  name           String
  description    String          @unique
  createdAt      DateTime
  updatedAt      DateTime
  deadline       DateTime
  tasks          Task[]
  collaborators  Collaborator[]  // Many-to-many relationship
}

model Task {
  id             String   @id @default(uuid()) @unique
  name           String   @unique
  description    String
  createdAt      DateTime
  updatedAt      DateTime
  deadline       DateTime
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id])
}

model Collaborator {
  id         String     @id @default(uuid()) @unique
  userId     String
  projectId  String
  role       String
  user       User     @relation(fields: [userId], references: [id])
  project    Project  @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}
